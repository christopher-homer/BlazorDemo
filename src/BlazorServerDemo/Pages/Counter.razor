@page "/counter"

<PageTitle>Counthhher</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

@if (DisplayCharlotte)
{
    <p>I love you Daddy!</p>
}
@if (DisplayDaddy)
{
    <p>Hello beautiful Daddy!!</p>
}

<button class="btn btn-primary" @onclick="IncrementCount">Click me Charlotte</button>

<button class="btn btn-primary" @onclick="DaddyClick">Click me Daddy</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        DisplayCharlotte = !DisplayCharlotte;
    }

    private void DaddyClick()
    {
        DisplayDaddy = !DisplayDaddy;
    }

    private bool DisplayCharlotte { get; set; }

    private bool DisplayDaddy { get; set; }
}
